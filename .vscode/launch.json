    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via allume",
            "runtimeExecutable": "allume",
            "cwd":"${workspaceRoot}",
            "runtimeArgs": [
                "../cc.demo/",
                "--config",
                "{\"foo\":\"bar\"}",
                "--debug",
                "5859",
                "--ui"
            ],
            "port": 5859,
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}